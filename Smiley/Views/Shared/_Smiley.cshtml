<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Smiley</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/images/faviconSmiley.png" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/4a3e78d515.js" crossorigin="anonymous"></script>
    <link href="~/lib/company.css" rel="stylesheet" />


    <style>

        #navbar {
            background-color: #2F2FA2;
            color: white;
            height: 100px;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            color: white;
            background-color: #2F2FA2;
            margin: 2px;
        }

        #navbar a:hover {
            background-color: #553D67;
            color: white;
        }

        #navbar a.active {
            background-color: #F64C72;
            color: white;
        }

        #navbar-right {
            float: right;
        }
    </style>

    @RenderSection("MoreScripts", false)

</head>

<body>

    <nav class="navbar navbar-expand-sm navbar-light" id="navbar">

        <!-- Hamburger Menu -->
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("admin"))
            {
                <partial name="SmileyAdmin" /> // Admin Users
            }

            else if (User.IsInRole("owner"))
            {
                <partial name="SmileyOwner" /> // Owner Users
            }

            else
            {
                <partial name="SmileyUser" /> // Login Users
            }
        }
        else
        {
            <partial name="SmileyGuest" />// Guest Users
        }
    </nav>

    <div class="container" style="color:white">
        @RenderBody()
    </div>

    <div>
        &nbsp;
    </div>

</body>
</html>

