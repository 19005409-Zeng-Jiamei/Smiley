@section MoreScripts {
    <script language="javascript">

      $(document).ready(function () {
         new Chart(document.getElementById("chart"), {
            type: '@ViewData["Chart"]',
            data: {
               labels: @Json.Serialize(ViewData["Labels0"]),
               datasets: [{
                  label: '@ViewData["Legend0"]',
                  data: @Json.Serialize(ViewData["Data0"]),
                  backgroundColor: @Json.Serialize(ViewData["Colors"]),
                  fill: false
               }]
            },
            options: {
               responsive: false,
               legend: {
                  display: @ViewData["ShowLegend0"]
               },
               title: {
                  display: true,
                  text: '@ViewData["Title0"]'
               }
            }
         });
      });

      $(document).ready(function () {
         new Chart(document.getElementById("chart1"), {
            type: '@ViewData["Chart"]',
            data: {
               labels: @Json.Serialize(ViewData["Labels2"]),
               datasets: [{
                  label: '@ViewData["Legend2"]',
                  data: @Json.Serialize(ViewData["Data2"]),
                  backgroundColor: @Json.Serialize(ViewData["Colors"]),
                  fill: false
               }]
            },
            options: {
               responsive: false,
               legend: {
                  display: @ViewData["ShowLegend2"]
               },
               title: {
                  display: true,
                  text: '@ViewData["Title2"]'
               }
            }
         });
      });

    </script>
}

<canvas id="chart" width="600" height="400" style="color:white"></canvas>
