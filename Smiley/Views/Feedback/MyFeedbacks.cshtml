
@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#JSFeedbackTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
        });
    </script>
}

<h2>Feedbacks</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div>
    <table id="JSDummyTable" class="table">
        @*Change Table Name*@
        <thead>
            <tr>
                <th>Gesture</th>
                <th>TimeStamp</th>
                <th>Sensor ID</th>
                <th>Feedback Type</th>
                @*<th>&nbsp;</th>*@
            </tr>
        </thead>

        <tbody>
            @foreach (string[] feedbackRow in TempData["Feedbacks"] as List<string[]>)
            {
                <tr>
                    <td>@feedbackRow[0]</td>
                    <td>@feedbackRow[1]</td>
                    <td>@feedbackRow[2]</td>
                    <td>@feedbackRow[3]</td>
                    @*<td>
                            <a asp-controller="Feedback"
                               asp-action="Delete"
                               asp-route-id="@user.smiley_user_id"
                               onclick="return confirm('Delete User [@user.full_name]')">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th>Gesture</th>
                <th>TimeStamp</th>
                <th>Sensor ID</th>
                <th>Feedback Type</th>
                @*<th>&nbsp;</th>*@
            </tr>
        </tfoot>
    </table>
</div>