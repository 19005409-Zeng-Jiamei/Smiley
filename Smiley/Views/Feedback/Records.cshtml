@{
    ViewData["Title"] = "Records";
}

@model DataRowCollection

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Smiley</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link rel="icon" type="image/png" href="~/images/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="~/images/favi" sizes="16x16" />



</head>

<body>
    @await Html.PartialAsync("NavBar")


    <div class="container">
        <h3>All Records</h3>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MsgType"]">
                @TempData["Message"]
            </div>
        }

        @if (Model != null)
        {
            <table class='table table-striped table-hover'>
                <tr>
                    <th>ID</th>
                    <th>Tag</th>
                    <th>Probability</th>
                    <th>URL</th>
                    <th>Date Taken</th>
                </tr>

                @foreach (DataRow row in Model)
                {
                    <tr>
                        <td>@row["prediction_id"]</td>
                        <td>@row["tag"]</td>
                        <td>@row["probability"]</td>
                        <td>@row["url"]</td>
                        <td>@String.Format("{0:yyyy-MM-dd}", @row["date_taken"])</td>
                    </tr>
                }
            </table>
        }

        else
        {
            <p class="alert alert-danger">No Records found.</p>
        }
    </div>

</body>
</html>

