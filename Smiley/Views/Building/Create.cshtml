@model Building

    <form asp-controller="Building"
          asp-action="Create"
          method="post">

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <h2>Create a New Building</h2>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="building_name">Name: </label>
            <div class="col-sm-4">
                <input type="text" asp-for="building_name" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="building_name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="building_type">Type: </label>
            <div class="col-sm-4">
                <input type="text" asp-for="building_type" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="building_type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="building_address">Address: </label>
            <div class="col-sm-4">
                <input type="text" asp-for="building_address" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="building_address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="building_postal_code">Postal: </label>
            <div class="col-sm-4">
                <input type="text" asp-for="building_postal_code" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="building_postal_code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <div class="alert alert-@ViewData[" MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            </div>
        }

    </form>

