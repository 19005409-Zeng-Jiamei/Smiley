@model Door

<form asp-controller="Door"
      asp-action="Create"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <h2>Create a New Door</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="door_gesture">Gesture: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="door_gesture" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="door_gesture" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="time_stamp">Time: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="time_stamp" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="time_stamp" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="sensor_id">Sensor: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="sensor_id" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="sensor_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <div class="alert alert-@ViewData[" MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }

</form>

