@model Location;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('#JSPerformDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm',
                    defaultDate: '@DateTime.Now.AddDays(14)', sideBySide: true
                });
        });
    </script>
}


<form asp-controller="Location" asp-action="Update"
      method="post">
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Update Location</h2>
        </div>
    </div>

    <input asp-for="location_id" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="location_name">Name: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="location_name" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="location_name" class="text-danger"></span>
        </div>
    </div>

    @{List<SelectListItem> locaTypeList = ViewData["LocationTypeList"] as List<SelectListItem>; }

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="location_type">Type: </label>
        <div class="col-sm-4">
            <select asp-for="location_type" class="form-group" asp-items="locaTypeList"></select>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="location_type" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="location_address">Unit No.: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="location_address" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="location_address" class="text-danger"></span>
        </div>
    </div>

    @{List<SelectListItem> buildNameList = ViewData["BuildingList"] as List<SelectListItem>; }

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="building_id">Building Name: </label>
        <div class="col-sm-4">
            <select asp-for="building_id" class="form-group" asp-items="buildNameList"></select>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="building_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn" style="        background-color: inherit; border-color: white; color: white;" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
<div class="form-group row">
    <div class="offset-sm-2 col-sm-6">
        <div class="alert alert-@ViewData["MsgType"]">
            @ViewData["Message"]
        </div>
    </div>
</div>}
</form>