@model Facility

<form asp-controller="Sensor"
      asp-action="Create"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <h2>Create a New Sensor</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="facility_type">facility Type :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="facility_type" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="facility_type" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="location_name">Location Name :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="location_name" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="location_name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="address">Sensor Address :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="address" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="operation_hour">Operation Hour :</label>
        <div class="col-sm-4">
            <input type="password" asp-for="operation_hour" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="operation_hour" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="smiley_user_id">Owner User ID: </label>
        <div class="col-sm-4">
            <select id="smiley_user_id" name="smiley_user_id" class="form-control">
                @{ List<SmileyUser> list = DBUtl.GetList<SmileyUser>("SELECT * FROM SmileyUser WHERE smiley_user_role='owner'");
                    foreach (SmileyUser user in list)
                    {

                        string uservalue = user.smiley_user_id;
                        <option value=@user.smiley_user_id>@user.smiley_user_id</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="smiley_user_id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-4">
                <div class="alert alert-@ViewData[" MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }

</form>

