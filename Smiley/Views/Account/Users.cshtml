
@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#JSUserTable').DataTable({ //Pls Change Name Here
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
        });
    </script>
}

@model List<User>
<h2>View All Users</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}


<div>

    <table id="JSUserTable" class="table table-condensed table-hover" style=" background-color:white;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Last Login</th>
                <th>Action</th>
                <th>Face</th>
            </tr>
        </thead>

        <tbody style="background-color: #BDD7EA;">
            @foreach (User user in Model)
            {
            <tr>
                <td>@user.full_name</td>
                <td>@user.email</td>
                <td>@user.smiley_user_role</td>
                <td>@user.last_login.ToString()</td>
                <td>
                    <a asp-controller="Account" asp-action="Update" asp-route-id="@user.smiley_user_id">
                        <i class="fas fa-pencil-alt"></i>
                    </a> |
                    <a asp-controller="Account" asp-action="Delete" asp-route-id="@user.smiley_user_id"
                       onclick="return confirm('Delete User [@user.full_name]')"><i class="fas fa-trash-alt"></i></a>
                </td>

                <td>
                    <img src="/smileyUsers/@user.email" width="100" height="100" />
                </td>


            </tr>
            }
        </tbody>

    </table>

</div>