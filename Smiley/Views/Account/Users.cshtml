@model List<User>

@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#JSUserTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
        });
    </script>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<h2>Performances </h2>

<table class="table table-condensed table-hover" @*id="JSUserTable"*@>
    <thead style=" background-color: #2F2FA2; color: white;">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Last Login</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody style=" background-color: #2F2FA2; color: white;">
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.smiley_user_id</td>
                <td>@user.full_name</td>
                <td>@user.email</td>
                <td>@user.smiley_user_role</td>
                <td>@String.Format("{0:yyyy-MM-dd hh:mm:ss}", user.last_login)</td>
                <td>
                    <a asp-controller="Account" asp-action="Update" asp-route-id="@user.smiley_user_id">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    |
                    <a asp-controller="Account"
                       asp-action="Delete"
                       asp-route-id="@user.smiley_user_id"
                       onclick="return confirm('Delete User [@user.full_name]')"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
