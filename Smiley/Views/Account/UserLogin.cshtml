@model UserLogin

<form asp-controller="Account"
      asp-action="Login"
      method="post">

    <h2 class="form-signin-heading">Please Sign In</h2>
    <div class="col-sm-5">

        <div class="form-group row">
            <label asp-for="smiley_user_id" class="control-label">User ID :</label>
            <input asp-for="smiley_user_id" class="form-control" />
            <span asp-validation-for="smiley_user_id" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="smiley_user_pw" class="control-label">Password :</label>
            <input asp-for="smiley_user_pw" class="form-control" />
            <span asp-validation-for="smiley_user_pw" class="text-danger"></span>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        }

        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>

    </div>

</form>

