@model User;


@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('#JSPerformDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm',
                    defaultDate: '@DateTime.Now.AddDays(14)', sideBySide: true
                });
        });
    </script>
}

<form asp-controller="Account" asp-action="Update"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Update User</h2>
        </div>
    </div>

    <input name="smiley_user_id" value="@ViewData["id"]" readonly />


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="full_name">Full Name: </label>
        <div class="col-sm-7">
            <input type="text" asp-for="full_name" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="full_name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="email">Email: </label>
        <div class="col-sm-7">
            <input type="text" asp-for="email" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="smiley_user_pw">Password: </label>
        <div class="col-sm-7">
            <input type="text" asp-for="smiley_user_pw" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="smiley_user_pw" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="smiley_user_pw2">Confirm Password: </label>
        <div class="col-sm-7">
            <input type="text" asp-for="smiley_user_pw2" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="smiley_user_pw2" class="text-danger"></span>
        </div>
    </div>

    @{
        List<SelectListItem> roleList = ViewData["UserRoleList"] as List<SelectListItem>;
    }
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="smiley_user_role">User Role: </label>
        <div class="col-sm-7">
            <select asp-for="smiley_user_role" class="form-group" asp-items="roleList"></select>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="smiley_user_role" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-7">
            <input type="text" asp-for="smiley_user_picfile" class="form-control" value="@ViewData["picfilename"]" hidden />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-7">
            <input type="text" asp-for="last_login" class="form-control" hidden value="1/1/2020" />
        </div>
    </div>

    <input type="text" asp-for="face_id" class="form-control" hidden value="1" />

    <input type="text" asp-for="superior_id" class="form-control" value="Ahhh" hidden/>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn" style="background-color: inherit; border-color: white; color: white;" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }
</form>